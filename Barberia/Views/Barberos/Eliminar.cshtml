@model Barberia.Models.Barbero

@{
    ViewData["Title"] = "Eliminar Barbero";
}

<div class="contenedor eliminar">
    <h1 class="titulo"><i class="fa-solid fa-triangle-exclamation"></i> Eliminar Barbero</h1>

    <p class="mensaje">¿Estás seguro de que querés eliminar a este barbero?</p>

    <div class="detalle">
        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Especialidad:</strong> @Model.Especialidad</p>
        <p><strong>Años de experiencia:</strong> @Model.AñosExperiencia</p>
    </div>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="botones">
            <button type="submit" class="boton eliminar">🗑 Confirmar</button>
            <a asp-action="Index" class="boton cancelar">Cancelar</a>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #111;
        color: #f8f8f8;
        font-family: 'Poppins', sans-serif;
        text-align: center;
    }

    .contenedor.eliminar {
        margin: 40px auto;
        width: 90%;
        max-width: 500px;
        background-color: #1b1b1b;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 0 25px rgba(255, 0, 0, 0.3);
    }

    .titulo {
        color: #ff4040;
        margin-bottom: 15px;
    }

    .mensaje {
        font-size: 1.1em;
        margin-bottom: 20px;
        color: #ffd700;
    }

    .detalle {
        background-color: #222;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 25px;
        text-align: left;
    }

        .detalle p {
            margin: 5px 0;
        }

    .botones {
        display: flex;
        justify-content: space-around;
    }

    .boton {
        background-color: #ffd700;
        color: #000;
        padding: 10px 20px;
        border-radius: 10px;
        border: none;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .boton.eliminar {
            background-color: #ff4040;
            color: #fff;
        }

            .boton.eliminar:hover {
                background-color: #ff6666;
            }

    .cancelar {
        background-color: #444;
        color: white;
    }

        .cancelar:hover {
            background-color: #666;
        }
</style>
