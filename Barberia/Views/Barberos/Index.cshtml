@model IEnumerable<Barberia.Models.Barbero>

@{
    ViewData["Title"] = "Listado de Barberos";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alerta exito">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alerta error">@TempData["Error"]</div>
}

<div class="contenedor">
    <h1 class="titulo"><i class="fa-solid fa-user-group"></i> Lista de Barberos</h1>

    <div class="acciones">
        <a asp-action="Crear" asp-controller="Barberos" class="boton agregar">
            <i class="fa-solid fa-user-plus"></i> Agregar Nuevo
        </a>
    </div>

    <table class="tabla">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Especialidad</th>
                <th>Años de Experiencia</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var barbero in Model)
            {
                <tr>
                    <td>@barbero.Nombre</td>
                    <td>@barbero.Especialidad</td>
                    <td>@barbero.AñosExperiencia</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@barbero.Id" class="boton editar"><i class="fa-solid fa-pen"></i></a>
                        <a asp-action="Eliminar" asp-route-id="@barbero.Id" class="boton eliminar"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #111;
        color: #f8f8f8;
        font-family: 'Poppins', sans-serif;
        text-align: center;
    }

    .contenedor {
        margin: 40px auto;
        width: 90%;
        max-width: 900px;
        background-color: #1b1b1b;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 0 25px rgba(255, 215, 0, 0.2);
    }

    .titulo {
        color: #ffd700;
        margin-bottom: 20px;
    }

    .acciones {
        text-align: right;
        margin-bottom: 15px;
    }

    .boton {
        background-color: #ffd700;
        color: #000;
        padding: 8px 14px;
        border-radius: 10px;
        border: none;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
        margin: 0 4px;
    }

        .boton:hover {
            background-color: #fff200;
        }

        .boton.agregar {
            background-color: #008000;
            color: white;
        }

            .boton.agregar:hover {
                background-color: #00a000;
            }

        .boton.editar {
            background-color: #ffd700;
        }

        .boton.eliminar {
            background-color: #ff4040;
            color: white;
        }

            .boton.eliminar:hover {
                background-color: #ff6666;
            }

    .tabla {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        background-color: #222;
        border-radius: 10px;
        overflow: hidden;
    }

        .tabla th, .tabla td {
            padding: 12px;
            border-bottom: 1px solid #333;
        }

        .tabla th {
            background-color: #333;
            color: #ffd700;
        }

        .tabla tr:hover {
            background-color: #292929;
        }

    /* Mensajes animados */
    .alerta {
        margin: 10px auto;
        max-width: 600px;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
        font-weight: bold;
        font-family: 'Poppins', sans-serif;
        animation: aparecer 0.5s ease-out, desaparecer 0.5s ease-in 3s forwards;
    }

        .alerta.exito {
            background-color: #222;
            color: #ffd700;
            border: 2px solid #ffd700;
            box-shadow: 0 0 10px rgba(255, 215, 0, 0.4);
        }

        .alerta.error {
            background-color: #400;
            color: #ff8080;
            border: 2px solid #ff4040;
            box-shadow: 0 0 10px rgba(255, 0, 0, 0.4);
        }

    @@keyframes aparecer {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes desaparecer {
        to {
            opacity: 0;
            transform: translateY(-10px);
            display: none;
        }
    }
</style>