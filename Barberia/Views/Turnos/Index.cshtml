@model Barberia.Models.ViewModels.TurnoDisponibleViewModel

@{
    ViewData["Title"] = "Turnos";
}

<div class="container mt-4">
    <h2>Reservar turno</h2>
    <p>Elegí la fecha del turno y reservá uno de los horarios disponibles.</p>

    <form asp-action="Index" method="get" class="d-flex align-items-center mb-4 gap-2">
        <label class="me-2">Fecha:</label>
        <input type="date" name="fecha"
               value="@Model.FechaSeleccionada.ToString("yyyy-MM-dd")"
               class="form-control" style="max-width: 220px;" />
        <button type="submit" class="btn btn-primary">Ver turnos</button>
    </form>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }

    @if (!Model.Turnos.Any())
    {
        <p>No hay turnos configurados para esta fecha.</p>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Hora</th>
                    <th>Barbero</th>
                    <th>Servicio</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.Turnos)
                {
                    <tr class="@(t.EstaDisponible ? "" : "table-secondary")">
                        <td>@t.Hora</td>
                        <td>@t.EmpleadoNombre</td>
                        <td>
                            @if (t.Servicios.Any())
                            {
                                <form asp-action="Reservar" method="post" class="d-flex gap-2">
                                    <input type="hidden" name="turnoId" value="@t.TurnoId" />
                                    <select name="servicioId" class="form-select">
                                        @foreach (var s in t.Servicios)
                                        {
                                            <option value="@s.Id">
                                                @s.Nombre (@s.Precio.ToString("C"))
                                            </option>
                                        }
                                    </select>
                                    @if (t.EstaDisponible)
                                    {
                                        <button type="submit" class="btn btn-success">
                                            Reservar
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-secondary" disabled>
                                            Ocupado
                                        </button>
                                    }
                                </form>
                            }
                            else
                            {
                                <span class="text-muted">Sin servicios asignados</span>
                            }
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
