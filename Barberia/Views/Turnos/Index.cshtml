@model Barberia.Models.ViewModels.TurnoDisponibleViewModel

@section Styles {
    <!-- estilos globales de “página tipo Users” -->
    <link rel="stylesheet" href="~/css/admin/users.css" asp-append-version="true" />

    <!-- opcional: estilos específicos de turnos -->
    <link rel="stylesheet" href="~/css/shift/shift.css" asp-append-version="true" />
}

<div class="users-page">
    <div class="users-header">
        <div>
            <h2>Reservar turno</h2>
            <p class="text-muted">
                Elegí la fecha del turno y reservá uno de los horarios disponibles.
            </p>
        </div>

        <div class="users-header-actions">
            <form asp-action="Index" method="get" class="filters-form">
                <div class="date-filter-group">
                    <label for="fecha" class="date-label">Fecha:</label>
                    <input type="date"
                           id="fecha"
                           name="fecha"
                           value="@Model.FechaSeleccionada.ToString("yyyy-MM-dd")"
                           class="date-input" />
                </div>

                <button type="submit" class="btn btn-filter">
                    Ver turnos
                </button>
            </form>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }

    @if (!Model.Turnos.Any())
    {
        <p class="users-empty">No hay turnos configurados para esta fecha.</p>
    }
    else
    {
        <div class="users-table-wrapper">
            <table class="users-table">
                <thead>
                    <tr>
                        <th class="col-hora">Hora</th>
                        <th class="col-barbero">Barbero</th>
                        <th class="col-servicio">Servicio</th>
                        <th class="col-estado col-center">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Turnos)
                    {
                        <tr>
                            <td class="col-hora col-date">@t.Hora</td>
                            <td class="col-barbero col-usuario">@t.EmpleadoNombre</td>
                            <td class="col-servicio">
                                @if (t.Servicios.Any())
                                {
                                    <div class="user-actions user-actions--compact">
                                        <form asp-action="Reservar" method="post" class="inline-form">
                                            @Html.AntiForgeryToken()

                                            <input type="hidden" name="turnoId" value="@t.TurnoId" />

                                            <select name="servicioId"
                                                    class="select-filter @(t.EstaDisponible ? "" : "select-disabled")"
                                                    @(t.EstaDisponible ? "" : "disabled")>
                                                @foreach (var s in t.Servicios)
                                                {
                                                    <option value="@s.Id">
                                                        @s.Nombre (@s.Precio.ToString("C"))
                                                    </option>
                                                }
                                            </select>

                                            @if (t.EstaDisponible)
                                            {
                                                <button type="submit" class="btn-reservar-turno">
                                                    Reservar
                                                </button>
                                            }
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Sin servicios</span>
                                }
                            </td>
                            <td class="col-estado col-center">
                                @if (t.EstaDisponible)
                                {
                                    <span class="pill pill-success">Disponible</span>
                                }
                                else
                                {
                                    <span class="pill pill-danger">Ocupado</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
