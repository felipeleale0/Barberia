<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Barbería</title>
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/6310/6310294.png" type="image/png">
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="logo">💈 <span>Barbería</span></div>
            <ul class="menu">
                <li><a href="/">Inicio</a></li>
                <li><a href="/Turnos">Turnos</a></li>
                <li><a href="/Barberos">Barberos</a></li>
                <li><a href="/Contacto">Contacto</a></li>
            </ul>
        </nav>
    </header>

    <main class="contenido">
        @RenderBody()
    </main>

    <footer>
        <p>© 2025 Barbería - Todos los derechos reservados</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>

