@model Barberia.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar contraseña";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth/login.css" asp-append-version="true" />
}

<div class="login-wrapper">
    <div class="login-card">
        <div class="login-header">
            <div class="login-logo">💈</div>
            <div>
                <h1 class="login-title">Barbería</h1>
                <p class="login-subtitle">Ingresá el correo para recuperar tu contraseña</p>
            </div>
        </div>

        @if (TempData["ForgotPasswordMessage"] != null)
        {
            <div class="alert alert-info mb-3">
                @TempData["ForgotPasswordMessage"]
            </div>
        }

        <form asp-action="ForgotPassword" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">
                Enviarme correo de recuperación
            </button>
        </form>

        <div class="login-footer-links">
            <a asp-controller="Auth" asp-action="Login">Volver al login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
